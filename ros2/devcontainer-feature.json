{
    "name": "ROS 2",
    "id": "ros2",
    "version": "0.1.0",
    "description": "Add ROS2 to your docker image",
    "options": {
        "distro": {
            "type": "string",
            "proposals": [
                "jazzy",
                "foxy"
            ],
            "default": "jazzy",
            "description": "ROS2 distribution"
        },
        "package": {
            "type": "string",
            "proposals": [
                "desktop",
                "ros-base"
            ],
            "default": "desktop",
            "description": "The ROS package to install."
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}